// ======================================================
// Prisma schema for FuelEU Maritime backend
// ======================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------------
// ROUTES – stores vessel operational and emissions data
// ------------------------------------------------------
model routes {
  id               Int      @id @default(autoincrement())
  route_id         String   @unique
  vessel_type      String
  fuel_type        String
  year             Int
  ghg_intensity    Float
  fuel_consumption Float
  distance         Float
  total_emissions  Float
  is_baseline      Boolean  @default(false)
  created_at       DateTime @default(now())
}

// ------------------------------------------------------
// SHIP COMPLIANCE – yearly carbon balance per vessel
// ------------------------------------------------------
model ship_compliance {
  id         Int      @id @default(autoincrement())
  ship_id    String
  year       Int
  cb_gco2eq  Float
  created_at DateTime @default(now())
}

// ------------------------------------------------------
// BANK ENTRIES – credit banking by ship & year
// ------------------------------------------------------
model bank_entries {
  id            Int      @id @default(autoincrement())
  ship_id       String
  year          Int
  amount_gco2eq Float
  created_at    DateTime @default(now())
}

// ------------------------------------------------------
// POOLS – multi-ship pooling mechanism
// ------------------------------------------------------
model pools {
  id         Int            @id @default(autoincrement())
  year       Int
  created_at DateTime        @default(now())
  members    pool_members[]
}

// ------------------------------------------------------
// POOL MEMBERS – join table for pooled ships
// ------------------------------------------------------
model pool_members {
  id         Int      @id @default(autoincrement())
  pool_id    Int
  ship_id    String
  cb_before  Float
  cb_after   Float
  created_at DateTime @default(now())

  pool pools @relation(fields: [pool_id], references: [id], onDelete: Cascade)
}
