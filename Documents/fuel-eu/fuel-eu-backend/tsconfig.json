{
  "compilerOptions": {
    /* Language and Module Settings */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* File Structure */
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@adapters/*": ["adapters/*"]
    },

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Interoperability */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Types (merged properly) */
    "types": ["node", "vitest/globals"]
  },
  "include": ["src", "prisma", "tests"]
}
